<%= turbo_frame_tag @promotion, "new_promotion_rule" do %>
  <%= form_tag solidus_friendly_promotions.admin_promotion_promotion_rules_path(@promotion) do %>
    <div class="promotion_rule promotion-block" id="<%= dom_id @promotion_rule %>">
      <h6 class='promotion-title'> <%= @promotion_rule.class.human_attribute_name(:description) %></h6>
      <%= link_to_with_icon 'trash', '', spree.edit_admin_promotion_path(@promotion), class: 'delete' %>
      <%= render partial: "spree/shared/error_messages", locals: { target: @promotion_rule } %>
      <%= hidden_field_tag "promotion_rule[type]", @promotion_rule.class.name %>
      <%= render partial: @promotion_rule.to_partial_path, locals: { promotion_rule: @promotion_rule, param_prefix: "promotion_rule" } %>
      <div class="row">
        <div class="col-12">
          <%= button_tag "Add", class: "btn btn-secondary float-right", data: { "turbo-frame" => "_top" } %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
